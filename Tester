-- Toggle script to enable or disable the visibility of a Frame in the ScreenGui "SimpleSpy2"
local SimpleSpy2 = Instance.new("ScreenGui")
local toggleButton = Instance.new("TextButton")
local frame = Instance.new("Frame")

-- Parent the ScreenGui to the player's PlayerGui
SimpleSpy2.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Set up the frame properties
frame.Size = UDim2.new(0, 200, 0, 200)
frame.Position = UDim2.new(0.5, -100, 0.5, -100)
frame.BackgroundColor3 = Color3.new(1, 1, 1)
frame.Parent = SimpleSpy2

-- Set up the toggle button properties
toggleButton.Size = UDim2.new(0, 100, 0, 50)
toggleButton.Position = UDim2.new(0.5, -50, 0.8, -25)
toggleButton.Text = "Toggle Frame"
toggleButton.Parent = SimpleSpy2

-- Initial state of the frame
local frameVisible = true

-- Function to toggle frame visibility
local function toggleFrame()
    frameVisible = not frameVisible
    frame.Visible = frameVisible
end

-- Connect the button click to toggle the frame
toggleButton.MouseButton1Click:Connect(toggleFrame)
