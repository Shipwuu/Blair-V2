-- Toggle script to enable or disable the "SimpleSpy2" ScreenGui
local SimpleSpy2 = Instance.new("ScreenGui")
local toggleButton = Instance.new("TextButton")

-- Parent the ScreenGui to the player's PlayerGui
SimpleSpy2.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Set up the toggle button properties
toggleButton.Size = UDim2.new(0, 100, 0, 50)
toggleButton.Position = UDim2.new(0.5, -50, 0.8, -25)
toggleButton.Text = "Enable"
toggleButton.Parent = SimpleSpy2

-- Initial state of the ScreenGui
local guiEnabled = true

-- Function to toggle ScreenGui enable state
local function toggleGui()
    guiEnabled = not guiEnabled
    SimpleSpy2.Enabled = guiEnabled
    toggleButton.Text = guiEnabled and "Disable" or "Enable"
end

-- Connect the button click to toggle the ScreenGui
toggleButton.MouseButton1Click:Connect(toggleGui)
